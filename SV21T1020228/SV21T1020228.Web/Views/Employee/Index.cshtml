@model PaginationSearchInput
@{
    ViewBag.Title = "Quản lý nhân viên";
}

<div class="box box-primary">
    <div class="box-body">
        <!-- Form nhập đầu vào tìm kiếm-->
        <form id="frmSearchInput" action="~/Employee/Search" method="get">
            <div class="input-group">
                <input type="hidden" name="@nameof(Model.PageSize)" value="@Model.PageSize" />
                <input name="searchValue"
                       type="text"
                       class="form-control"
                       placeholder="Nhập tên nhân viên cần tìm"
                       autofocus
                       name="@nameof(Model.SearchValue)"
                       value="@Model.SearchValue"/>
                <div class="input-group-btn">
                    <button class="btn btn-info" type="submit">
                        <i class="fa fa-search"></i>
                    </button>
                    <a href="~/Employee/Create" class="btn btn-primary" style="margin-left:5px">
                        <i class="fa fa-plus"></i> Bổ sung
                    </a>
                </div>
            </div>
        </form>

        <!-- Hiển thị dữ liệu -->
        <p style="margin:10px 0 10px 0">
            Có <strong>100</strong> đơn hàng trong tổng số <strong>10</strong> trang
        </p>

        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr class="bg-primary">
                        <th>Khách hàng</th>
                        <th>Ngày lập</th>
                        <th>Nhân viên phụ trách</th>
                        <th>Thời điểm duyệt</th>
                        <th>Người giao hàng</th>
                        <th>Ngày nhận giao hàng</th>
                        <th>Thời điểm kết thúc</th>
                        <th>Trạng thái</th>
                        <th style="width:40px"></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 1; i <= 5; i++)
                    {
                        <tr>
                            <td>Trần Quang Lợi</td>
                            <td>01/10/2022 15:00</td>
                            <td>Nguyễn Văn Minh</td>
                            <td>01/10/2022 17:00</td>
                            <td>Lê Văn Hải</td>
                            <td>03/10/2022 11:30</td>
                            <td>03/10/2022 11:45</td>
                            <td>Finished</td>
                            <td>
                                <a href="~/Order/Details/123" class="btn btn-info btn-xs">
                                    <i class="glyphicon glyphicon-th-list"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="text-center">
            <ul class="pagination">
                <li class="active"><a href="#">1</a></li>
                <li><a href="#">2</a></li>
            </ul>
        </div>
    </div>
</div>

