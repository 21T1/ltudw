@{
    ViewBag.Title = "Đăng ký";
}
<div class="container-lg">
    <div class="py-5 my-5 rounded" style="box-shadow: 0px 2px 4px rgba(0, 0, 0, .1), 0px 8px 16px rgba(0, 0, 0, .1)">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-5 p-3">
                    <div class="section-header">
                        <img src="~/images/login.png" class="w-75" />
                    </div>
                </div>
                <div class="col-md-5 p-3">
                    <form action="~/Account/SignUp" method="post">
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <input type="text" class="form-control form-control-md rounded-0" name="fullName" placeholder="Họ và tên" required>
                        </div>
                        <div class="mb-3">
                            <input type="text"
                                   class="form-control form-control-md rounded-0" name="username" placeholder="Email" required>
                        </div>
                        <div class="mb-3">
                            <input type="password"
                                   class="form-control form-control-md rounded-0" name="password" placeholder="Mật khẩu" required>
                        </div>
                        <div class="mb-3">
                            <input type="password"
                                   class="form-control form-control-md rounded-0" name="confirmPassword" placeholder="Xác nhận mật khẩu" required>
                        </div>
                        <div class="d-grid gap-2">
                            <div class="col-xs-8">
                                @Html.ValidationMessage("Error")
                            </div>
                            <button type="submit" class="btn btn-primary btn-md rounded-0">Đăng ký</button>
                        </div>
                    </form>
                    <div class="d-flex justify-content-center pt-2">
                        <p style="color: black;">Bạn đã có tài khoản? <a href="Login" class="link-primary text-decoration-none">Đăng nhập</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>