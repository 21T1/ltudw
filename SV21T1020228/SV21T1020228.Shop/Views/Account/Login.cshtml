@{
    ViewBag.Title = "Đăng nhập";
}

<div class="container-lg">
    <div class="py-5 my-5 rounded" style="box-shadow: 0px 2px 4px rgba(0, 0, 0, .1), 0px 8px 16px rgba(0, 0, 0, .1)">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-5 p-3">
                    <div class="section-header">
                        <img src="~/images/login.png" class="w-75" />
                    </div>
                </div>
                <div class="col-md-5 p-3">
                    <form action="~/Account/Login" method="post">
                        @Html.AntiForgeryToken()    <!-- Ngăn chặn lời gọi đến trang từ bên ngoài -->

                        <div class="mb-3">
                            <input type="email" class="form-control form-control-md rounded-0" name="username" id="email" placeholder="Email" required>
                        </div>
                        <div class="mb-3">
                            <input type="password"
                                   class="form-control form-control-md rounded-0" name="password" id="name" placeholder="Mật khẩu" required>
                        </div>                       
                        <div class="d-grid gap-2">
                            <div class="col-xs-8">
                                @Html.ValidationMessage("Error", new { @style = "color: #f00" })
                            </div>
                            <button type="submit" class="btn btn-primary btn-md rounded-0">Đăng nhập</button>
                        </div>
                    </form>
                    <div class="d-flex justify-content-center pt-2">
                        <p style="color: black;">Bạn chưa có tài khoản? <a href="SignUp" class="link-primary text-decoration-none">Đăng ký</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>